<li id="<%= item.id %>">
  <div class="row">
    <div class="col-md-1">
      <%= link_to(image_tag(item.content_image.thumb.url, alt:item.content_image, class: "productImage"), item) %>
    </div>
    <div class="col-md-1">
      <h1>+</h1>
    </div>
    <div class="col-md-1">
      <%= link_to(image_tag(item.style_image.thumb.url, alt:item.style_image, class: "productImage"), item) %>
    </div>
    <div class="col-md-1">
      <h1>=</h1>
    </div>

    <div class="col-md-6">

    </div>
    <div class="col-md-2">
      <span class="user">
       <%= link_to "поделиться", item, method: :delete,
                   data: { confirm: "You sure?" } %>
      </span>
      <% if item.status != 1 %>
        <span class="content"><%= link_to "удалить", item, method: :delete,
                                          data: { confirm: "You sure?" } %> </span>
      <% end %>

      <span class="timestamp">
        <% if item.status < 0 %>
            <p> Ошибка при обработке </p>
        <% elsif item.status == 0 %>
            <p> Ожидает обработку </p>
        <% elsif item.status == 1 %>
            <p> Обрабатывается </p>
        <% elsif item.status > 1 %>
            <p> Обработано </p>
        <% end %>

      </span>



    </div>


  </div>

</li>