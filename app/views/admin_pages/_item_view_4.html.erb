<% debug = false %>

<%item = item_view_4 %>
<%res_img = item.result_image %>

<div class="row styleRow2-lg">

        <div class="visible-lg  col-lg-2 col-lg-offset-2 userAvatarStyle-lg" >
          <%= link_to(image_tag(item.content.image.thumb200.url, alt:item.content.image, class: "imagesStyle"), item.content.image.url, class: "imagesStyle", data:{ lightbox: "content"}) %>
        </div>
        <div class="visible-lg  col-lg-2 userAvatarStyle-lg">
          <%= link_to(image_tag(item.style.image.thumb200.url, alt:item.style.image, class: "imagesStyle"), item.style.image.url, class: "imagesStyle", data:{ lightbox: "content"}) %>
        </div>


        <div class="hidden-lg col-md-2 col-sm-3 col-xs-3 col-md-offset-2 userAvatarStyle-lg" >
          <%= image_tag(item.content.image.thumb200.url, class: "imagesStyle")%>
        </div>
        <div class="hidden-lg col-md-2 col-sm-3 col-xs-3 userAvatarStyle-lg">
          <%= link_to(image_tag(item.style.image.thumb200.url, alt:item.style.image, class: "imagesStyle"), item.style.image.url, class: "imagesStyle") %>
        </div>

        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3 userAvatarStyle-lg">

          <div class="visible-lg" >
            <%= link_to(image_tag(res_img.imageurl.thumb400.url, alt:res_img.imageurl, class: "imagesStyle"), res_img.imageurl.url, class: "imagesStyle", data:{ lightbox: "content"})  if res_img %>
          </div>
          <div class="hidden-lg" >
            <%= link_to(image_tag(res_img.imageurl.thumb400.url, alt:res_img.imageurl, class: "imagesStyle"), res_img.imageurl.url, class: "imagesStyle")  if res_img %>
          </div>
        </div>





        <div class=" col-lg-2 col-md-2 col-sm-3 col-xs-3 ">
          <span class="textAboutStyle">
           <%= item.client.email if !item.client.nil? %>
          </span>

          <span class="textAboutStyle"><%= (item.created_at+10800).strftime("%d.%m.%Y %H:%M:%S")%><br></span>

          <span class="textAboutStyle"><%= get_queue_item_status(item) %></span>


          <span class="">
            <% if item.status == ConstHelper::STATUS_DELETED || item.status == ConstHelper::STATUS_PROCESSED_BY_BOT %>
              <%= link_to "ПОКАЗАТЬ", "/queue_images/#{item.id}/visible", method: :put %>
            <% else %>
              <%= link_to "СКРЫТЬ", "/queue_images/#{item.id}/hidden", method: :put %>
            <% end %>
          </span>



          <span class="textAboutStyle">
            <br> <br>
            <%= link_to "удалить", item, method: :delete, data: { confirm: "Вы точно хотите удалить?" } %>
          </span>

        </div>

</div>

<div class="row" style="height: 50%">
  <% item.pimages.each do |pi| %>
      <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
        <%= link_to(image_tag(pi.imageurl.thumb400.url, alt:pi.imageurl, class: "imagesStyle"), pi.imageurl.url, class: "imagesStyle", data:{ lightbox: "content"})  if res_img %>
      </div>
  <% end %>

</div>











